<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/avo_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?cardViewBackground"
                android:paddingBottom="6dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp">

    <com.avocarrot.androidsdk.ui.AdChoicesView
        android:id="@+id/avo_ad_choices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/avo_sponsored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/avo_ad_choices"
        android:background="@android:color/transparent"
        android:text="Sponsored"
        android:textColor="?android:textColorPrimary"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/avo_ad_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/avo_ad_choices"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:contentDescription="Ad Icon"/>

    <TextView
        android:id="@+id/avo_ad_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/avo_sponsored"
        android:layout_toRightOf="@+id/avo_ad_icon"
        android:gravity="left"
        android:maxLines="2"
        android:text="Ad Title"
        android:textColor="?android:textColorPrimary"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/avo_ad_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/avo_ad_icon"
        android:layout_alignParentRight="true"
        android:background="@color/theme_primary"
        android:gravity="right"
        android:maxLines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Learn More"
        android:textColor="#ffffffff"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/avo_ad_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/avo_ad_button"
        android:layout_below="@+id/avo_ad_headline"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/avo_ad_button"
        android:layout_toRightOf="@+id/avo_ad_icon"
        android:layout_toStartOf="@+id/avo_ad_button"
        android:gravity="left"
        android:maxLines="3"
        android:paddingTop="8dp"
        android:text="Ad Description"
        android:textColor="?android:textColorPrimary"
        android:textSize="11sp"/>

</RelativeLayout>
